<UserControl
    x:Class="LifeCalculator.Views.CalculatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlViewModels="clr-namespace:LifeCalculator.Control.ViewModels;assembly=LifeCalculator.Control"
    xmlns:controlViews="clr-namespace:LifeCalculator.Control.Views;assembly=LifeCalculator.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LifeCalculator.Views"
    xmlns:framework="clr-namespace:LifeCalculator.Framework.Account;assembly=LifeCalculator.Framework"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <lvc:CartesianChart
            Grid.Row="0"
            Grid.Column="0"
            Width="600"
            Height="300"
            Margin="5"
            Series="{Binding ValueCollection}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis LabelFormatter="{Binding Formatter}" />
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>

        <!--  Account Grid  -->
        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Width="225"
            Height="300"
            Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  row 0  -->
            <Label
                x:Name="AccountTypes"
                Grid.Row="0"
                Grid.Column="0"
                Margin="2"
                Content="Account Types:"
                Foreground="Black" />
            <ComboBox
                x:Name="AccountTypeSelection"
                Grid.Row="0"
                Grid.Column="1"
                Margin="2"
                BorderBrush="Black"
                Foreground="Black"
                ItemsSource="{Binding AccountTypesList}"
                Text="{Binding AccountType}" />

            <ContentControl 
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"  
                Content="{Binding CurrentViewModel}" />


        </Grid>

        <!--  Events Grid  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Width="225"
            Height="300"
            Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                x:Name="EvemtNameLabel"
                Grid.Row="0"
                Grid.Column="0"
                Margin="2"
                Content="Events:"
                Foreground="Black" />
            <ComboBox
                x:Name="EventNameTextbox"
                Grid.Row="0"
                Grid.Column="1"
                Margin="2"
                BorderBrush="Black"
                DisplayMemberPath="Name"
                ItemsSource="{Binding AccountsList}"
                SelectedItem="{Binding AccountSelected}"/>

            <ContentControl
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2" 
                Content="{Binding CurrentEventViewModel}"/>
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            Width="600"
            Height="400"
            Margin="5">
            <ItemsControl ItemsSource="{Binding AccountsList}">
                <ItemsControl.Resources>
                    <DataTemplate DataType="{x:Type controlViewModels:ModifyLoanViewModel}">
                        <Expander Header="{Binding Name}">
                            <controlViews:ModifyLoan />
                        </Expander>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type controlViewModels:ModifyCompoundViewModel}">
                        <Expander Header="{Binding Name}">
                            <controlViews:ModifyCompound />
                        </Expander>
                    </DataTemplate>
                </ItemsControl.Resources>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
