<UserControl
    x:Class="LifeCalculator.Control.Views.ModifyEventLoan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LifeCalculator.Control.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>

        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label x:Name="InvestmentNameLabel" Content="Name:" />
                <Label x:Name="StartDateLabel" Content="Date:" />
            </StackPanel>

            <StackPanel>
                <TextBox x:Name="InvestmentNameTextBox" Width="100" Text="{Binding Name}" />
                <DatePicker x:Name="StartDateTextBox" Width="100" SelectedDate="{Binding StartDate}" />
            </StackPanel>

            <StackPanel>
                <Label x:Name="AdditionalContributionLabel" Content="Additional Contribution :" />
                <Label x:Name="LoanLengthLabel" Content="Stop Contributing :" />
            </StackPanel>

            <StackPanel>
                <TextBox x:Name="AdditionalContributionTextBox" Text="{Binding Amount, StringFormat=C}" />
                <DatePicker x:Name="EndDateTextBox" Width="100" SelectedDate="{Binding EndDate}" />
            </StackPanel>
        </StackPanel>

        
    </Grid>
</UserControl>
